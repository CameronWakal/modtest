<div class="app-sidebar-section">
  <h4>{{module.name}} Module</h4>
</div>
<div class="app-sidebar-section">
  <ul>
    <li>
      <ValueInputString @boundValue={{this.module.title}} @canBeEmpty={{false}} @valueUpdated={{this.titleChanged}} />
    </li>
  </ul>
</div>
{{#if hasSettings}}
  <div class="app-sidebar-section">
    <ul>
      {{#each module.settings as |setting|}}
        <li>
          {{#let (component setting.type) as |SettingComponent|}}
          <SettingComponent @setting={{setting}} />
          {{/let}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}

{{#if hasPorts}}
  <div class="app-sidebar-section">
    <h4>Ports</h4>
    <ul>
      {{#each module.ports as |port|}}
        <li>
          <PortSetting @port={{port}} @addBusConnection={{this.addBusConnection}} />
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}
