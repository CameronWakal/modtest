<div class="app-sidebar-section">
  <h4>{{module.name}} Module</h4>
</div>
<div class="app-sidebar-section">
  <ul>
    <li>
      {{value-input-string boundValue=module.title canBeEmpty=false valueUpdated=(action 'titleChanged')}}
    </li>
  </ul>
</div>
{{#if hasSettings}}
  <div class="app-sidebar-section">
    <ul>
      {{#each module.settings as |setting|}}
        <li>
          {{component setting.type setting=setting}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}

{{#if hasPorts}}
  <div class="app-sidebar-section">
    <h4>Ports</h4>
    <ul>
      {{#each module.ports as |port|}}
        <li>
          {{port-setting port=port addBusConnection=(action 'addBusConnection')}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}
