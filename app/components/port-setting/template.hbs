<label class="setting-label">
  {{input type="checkbox" checked=port.isEnabled}}
  {{labelWithType}}
</label>
{{#unless port.isEnabled}}
  {{#if portIsValueIn}}
    {{value-input-number
      boundValue=port.disabledValue
      canBeEmpty=port.canBeEmpty
      minValue=port.minValue
      maxValue=port.maxValue
    }}
  {{else if port.isEventPort}}
    {{port-setting-bus-menu
      busses=port.module.patch.busses
      connectedBus=connectedBus
      disconnectFromBus=(action 'disconnectFromBus')
      connectToBus=(action 'connectToBus')
    }}
  {{/if}}
{{/unless}}
