<h4>{{module.label}} Module</h4>
{{#if hasSettings}}
  <ul>
    {{#each module.settings as |setting|}}
      <li>
        <span class="setting-label">{{setting.label}}</span>
          {{#if setting.isNumber}}
            {{value-input-number boundValue=setting.value}}
          {{else}}
            <div class="select-menu-wrapper">{{select-menu setting=setting}}</div>
          {{/if}}
      </li>
    {{/each}}
  </ul>
{{/if}}

{{#if hasPorts}}
  <div class="module-settings-ports">
  <h4>Ports</h4>
    <ul>
      {{#each module.ports as |port|}}
        <li>
          {{port-setting port=port}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}
