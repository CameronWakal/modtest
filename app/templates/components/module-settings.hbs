{{#if hasSettings}}
  <h4>{{module.label}} Settings</h4>
  <ul>
    {{#each module.settings as |setting|}}
      <li>
        <span class="setting-label">{{setting.label}}</span>{{setting-input value=setting.value}}
      </li>
    {{/each}}
  </ul>
{{/if}}

{{#if hasValueInPorts}}
  <h4>{{module.label}} Value In Ports</h4>
  <ul>
    {{#each module.valueInPorts as |port|}}
      <li>
        <span class="setting-label">{{input type="checkbox" checked=port.isEnabled}}{{port.label}}</span>{{#unless port.isEnabled}}{{setting-input value=port.disabledValue}}{{/unless}}
      </li>
    {{/each}}
  </ul>
{{/if}}

