<div class="module-ports">
  {{#each @portGroups as |portGroup|}}
    {{#each portGroup.enabledPorts as |port|}}
      {{component
        port.type
        port=port
        startedConnecting=(fn @portStartedConnecting port)
        finishedConnecting=@portFinishedConnecting
        handleMouseEnter=(fn @mouseEnterPort port)
        handleMouseLeave=@mouseLeavePort
        disconnect=(fn @disconnectPort port)
      }}
    {{/each}}
  {{/each}}
</div>
