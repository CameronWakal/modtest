<h3>Clock</h3>

{{#if isStarted}}
  <button {{action 'stop'}}>Stop</button>
{{else}}
  <button {{action 'start'}}>Start</button>
{{/if}}

{{#each module.ports as |port|}}{{component port.constructor.modelName  port=port 
                  select=(action 'selectPort' port) }}{{/each}}<button {{action 'remove'}}>X</button>