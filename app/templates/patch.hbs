<h4>{{model.name}}</h4>
<button {{action 'addModule' 'module-generic'}}>Add Module</button>
<button {{action 'addModule' 'module-clock'}}>Add Clock Module</button>

<h5>Connect Modules</h5>
<p>Source: {{sourceModule.type}} {{sourcePort.label}}</p>
<p>Dest: {{destModule.type}} {{destPort.label}}</p>

<ul class="modules-list">
  {{#each model.modules as |module|}}
    <li>
        {{component   module.type 
                      model=module 
                      selectPort=(action 'selectModulePort' module) 
                      remove=(action 'removeModule' module)
        }}
    </li>
  {{/each}}
</ul>