<div class="module-ports">
  {{#each module.portGroups as |portGroup|}}
    {{#each portGroup.enabledPorts as |port|}}
      {{component
        port.type
        port=port
        startedConnecting=(action 'portStartedConnecting' port)
        finishedConnecting=(action 'portFinishedConnecting')
        handleMouseEnter=(action 'mouseEnterPort' port)
        handleMouseLeave=(action 'mouseLeavePort')
        disconnect=(action 'disconnectPort' port)
      }}
    {{/each}}
  {{/each}}
</div>
